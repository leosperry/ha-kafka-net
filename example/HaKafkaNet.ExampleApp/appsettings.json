{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "HaKafkaNet" : "Warning"
    }
  },
  "NLog":{
    "rules":[
      {
        "logger": "Microsoft.*",
        "minLevel": "Warn",
        "finalMinLevel":"Warn"
      },
      {
        "logger": "System.Net.*",
        "minLevel": "Warn",
        "finalMinLevel":"Info"
      },
      {
        "logger": "HaKafkaNet.*",
        "minLevel": "Debug",
        "finalMinLevel": "Debug"
      }
    ]
  },
  "AllowedHosts": "*",
  "HaKafkaNet": {
    "KafkaBrokerAddresses": [ "<ip of your kafka instance>:9094" ],
    "KafkaTopic": "home_assistant_states",
    "ExposeKafkaFlowDashboard": true,
    "UseDashboard": true,
    "StateHandler": {
      "GroupId": "hakafkanet-consumer-example",
      "BufferSize": 5,
      "WorkerCount": 5
    },
    "HaConnectionInfo": {
      "BaseUri": "http://IP_OR_DOMAIN_OF_YOUR_HA_INSTANCE:8123",
      "AccessToken": "YOUR_LONG_LIVED_HA_ACCESSTOKEN"
    }
  },
  "ConnectionStrings": {
    "RedisConStr" : "`YOUR_REDIS_CONNECTION_STRING"
  }
}
